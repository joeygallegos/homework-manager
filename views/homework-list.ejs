<ul class='list-group'>
<%for (var i = 0; i < data.length; i++) {%>
  <%var homework = data[i]%>
  <%var date = homework.date.split('-')%>
  <%date = date[2] + '/' + date[1]%>

  <li href='#' class='list-group-item <% if(homework.done) {%>list-group-item-success<%}%>'>
    <p class='list-group-item-heading'>
      <div class='media'>
        <div class='pull-left'>
          <button href='#' class='btn btn-success' type='button' id='done' onclick='toggleHomework('<%=homework._id%>')'><i class='fa fa-check'></i></button><br/>
        </div>
        <div class='media-body'>
          <div class='label label-primary'><%=homework.subject%></div> <div class='label label-warning'><%=date%></div> <button href='#' class='btn btn-info btn-xs' id='edit' type='button' onclick='showEditHomework('<%=homework._id%>', '<%=homework.date%>', '<%=homework.subject%>', '<%=homework.description%>')'><i class='fa fa-pencil'></i></button>
          <p><%=homework.description%></p>
        </div>
      </div>
    </p>
  </li>
<%}%>
</ul>
